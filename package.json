{
  "name": "webpack-features",
  "version": "1.4.8",
  "description": "Feature-based high level webpack configure helper",
  "main": "dist/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "author": "Aleksandr Snov <snov.contact@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "lint": "eslint src",    
    "build": "cross-env BABEL_ENV=commonjs rimraf dist/ && babel src --out-dir dist --ignore **/*.test.js,**/*.spec.js",
    "build:es": "cross-env BABEL_ENV=es babel --no-babelrc src --out-dir es --ignore **/*.test.js,**/*.spec.js --presets=stage-2",
    "prepublish": "yarn lint && yarn test && yarn build && yarn build:es",
    "major-release": "npm --no-git-tag-version version major && npm publish",
    "minor-release": "npm --no-git-tag-version version minor && npm publish",
    "patch-release": "npm --no-git-tag-version version patch && npm publish"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "rootDir": "",
    "testRegex": "(src).*(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.0.1",
    "eslint": "3.19.0",
    "eslint-config-react-app": "^1.0.4",
    "eslint-plugin-flowtype": "2.33.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-react": "7.0.1",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1"
  }
}
